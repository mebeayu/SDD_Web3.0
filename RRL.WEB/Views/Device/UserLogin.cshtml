@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport"
          content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <title>APP更新</title>
    <link rel="stylesheet" href="~/Assets/Source/Styles/2-22.css" />
    <style>
        .main {
            background-color: #fff;
        }

        .content, .content li {
            padding: 0;
        }

        .content li.flp-li {
            width: 33.3333333333%;
        }
    </style>
</head>

<body>
    <div class="main">
        <div class="img">
            <img id="imgUpdate" src="~/Assets/images/version_update.png" />
        </div>
    </div>
</body>

<script type="text/javascript">
    (function () {
        var imgUpdate = document.getElementById("imgUpdate");
        imgUpdate.addEventListener("click", function () {
            var ua = window.navigator.userAgent.toLowerCase();
            if (ua.indexOf('iphone') > -1 || ua.indexOf('ipad') > -1) {
                location.href = "https://itunes.apple.com/cn/app/id1180975910?mt=8";
            }
            else if (ua.indexOf('android') > -1){
                location.href = "https://e-shop.rrlsz.com.cn/Assets/Product/sdoudou_v110.apk";
            }
        }, false);
    })();

</script>

</html>