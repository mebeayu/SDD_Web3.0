@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .back-page-btn {
            box-sizing: border-box;
            padding: 15px;
            font-size: 18px;
            color: #7a7a7a;
            text-align: center;
            border-bottom: 1px solid #dcdcdc;
            position: fixed;
            top: 0;
            width: 100%;
            background: #fff;
        }

        p {
            margin: 0;
            padding: 0;
        }

        .back-page-btn img {
            height: 24px;
            float: left;
        }

        #carttop {
            position: fixed;
            top: 0;
            width: 100%;
            background: #fff;
            border-bottom: 1px solid #d4d4d4;
            z-index: 11;
            text-align: center;
        }

        .totalcash {
            text-align: center;
            font-size: 17px;
            color: #2d2d2d;
            line-height: 50px;
            margin-bottom: 10px;
            margin-top: 54px;
            background: #fff;
        }

        .totalcash span {
            color: #ba3027;
        }

        .payway {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 15px;
            margin-top: 15px;
            background: #fff;
        }

        .payway div img {
            width: 25px;
            height: 23px;
            margin-right: 16px;
        }

        .payway-left {
            display: flex;
            align-items: center;
            color: #2d2d2d;
            font-size: 14px;
            line-height: 25px;
        }

        .payway img {
            width: 16px;
            height: 16px;
        }

        .paybtn {
            width: 100%;
            position: fixed;
            bottom: 150px;
            padding: 0 15px;
            box-sizing: border-box;
        }

        .paybtn input {
            width: 100%;
            background: #ba3027;
            color: #fff;
            font-size: 17px;
            text-align: center;
            border-radius: 5px;
            line-height: 40px;
        }

        .goods-detail-info img {
            width: 100%;
        }

        input[type=button] {
            -webkit-appearance: none;
            outline: none;
        }

        .download-wrap {
            position: absolute;
            width: 100%;
            top: 66%;
            left: 50%;
            transform: translateX(-50%);
        }

    </style>
    <script>
        var token = '@ViewBag.token';
        var money = '@ViewBag.money';
    </script>
</head>
<body>
    <div style="background:#f5f5f5">
        <div class="back-page-btn" id="carttop">
            <img src="/Assets/Source/img/返回@3x.png" onclick="window.history.go(-1)" />
            <p style="margin:0;">选择支付方式</p>
        </div>
        <div class="totalcash">
            需支付：<span id="gggcash"></span>
        </div>
        <div class="payway">
            <div class="payway-left">
                <img src="/Assets/Source/img/微信支付@3x.png" />
                <p>
                    <span>微信支付</span><br />
                    <span style="color:#7a7a7a;font-size:14px;">推荐安装微信5.0及以上版本的用户使用</span>
                </p>
            </div>
            <img src="/Assets/Source/img/选择@3x.png" />
        </div>
        <div class="paybtn">
            <input type="button" value="立即支付" onclick="pay()" />
        </div>
    </div>
    <script src='https://res.wx.qq.com/open/js/jweixin-1.0.0.js'></script>
    <script src="~/Assets/Event/jquery-3.2.1.min.js"></script>
    <script>
        var cash;
        var request;
        var request;
        function GetRequest() {

            var url = location.search; //获取url中含"?"符后的字串

            var theRequest = new Object();

            if (url.indexOf("?") != -1) {

                var str = url.substr(1);

                strs = str.split("&");

                for (var i = 0; i < strs.length; i++) {

                    theRequest[strs[i].split("=")[0]] = unescape(strs[i].split("=")[1]);

                }

            }

            return theRequest;

        }

        request = GetRequest()
        console.log(request);
        (function(){
            $('#gggcash').text(money)
        })()
        var status = @ViewBag.status;
        function pay(){
            if (status == 0) {
                function onBridgeReady() {
                    WeixinJSBridge.invoke(
                        'getBrandWCPayRequest', {
                            "appId": "@ViewBag.appId",     //公众号名称，由商户传入
                            "timeStamp": "@ViewBag.timeStamp",         //时间戳，自1970年以来的秒数
                            "nonceStr": "@ViewBag.nonceStr", //随机串
                            "package": "@ViewBag.package",
                            "signType": "@ViewBag.signType",         //微信签名方式：
                            "paySign": "@ViewBag.paySign" //微信签名
                        },
                        function (res) {
                            if (res.err_msg == "get_brand_wcpay_request:ok") {
                                console.log(request.redirect + '=' + request.token);
                                //window.location.href = request.redirect + '=' +request.token
                                // window.location.href='https://e-shop.rrlsz.com.cn/Game/Roulette/?token=' + encodeURIComponent(token)
                            }     // 使用以上方式判断前端返回,微信团队郑重提示：res.err_msg将在用户支付成功后返回    ok，但并不保证它绝对可靠。
                            console.log(request.redirect + '=' +request.token)
                            //window.location.href = request.redirect + '=' +request.token
                            //window.location.href='https://e-shop.rrlsz.com.cn/Game/Roulette/?token=' + encodeURIComponent(token)
                        }
                    );
                }
                if (typeof WeixinJSBridge == "undefined") {
                    if (document.addEventListener) {
                        document.addEventListener('WeixinJSBridgeReady', onBridgeReady, false);
                    } else if (document.attachEvent) {
                        document.attachEvent('WeixinJSBridgeReady', onBridgeReady);
                        document.attachEvent('onWeixinJSBridgeReady', onBridgeReady);
                    }
                } else {
                    onBridgeReady();
                }
            }
        }
    </script>
</body>
</html>