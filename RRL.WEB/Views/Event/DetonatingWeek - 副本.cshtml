<script type="text/javascript">
    $(function(){
       ShopOneSectionInfo();
    })
    function ShopOneSectionInfo(){
        var list1_title=$('#list1_title').attr('dada-count'),
            list2_title=$('#list2_title').attr('dada-count'),
            list3_title=$('#list3_title').attr('dada-count'),
            list4_title=$('#list4_title').attr('dada-count'),
            list5_title=$('#list5_title').attr('dada-count');
        var data={
           list:list1_title+','+list2_title+','+list3_title+','+list4_title+','+list5_title
        }
        $.getJSON('/Webapi/ShopManager/ShopOneSectionInfo',{SectionStr:JSON.stringify(data)},function (res) {
            if(res.status==0){
                  for(var i in res.data){
                        var dad=res.data[i];
                        if(dad.Section=='1-1000'){
                            fn_list_(dad,$('#list1 ul'))           
                        }
                        if(dad.Section=='1000-2000'){
                            fn_list_(dad,$('#list2 ul'))           
                        }
                        if(dad.Section=='2000-5000'){
                            fn_list_(dad,$('#list3 ul'))           
                        }
                        if(dad.Section=='5000-10000'){
                            fn_list_(dad,$('#list4 ul'))           
                        }
                        if(dad.Section=='10000'){
                            fn_list_(dad,$('#list5 ul'))           
                        }
                  }
            }
        })
    }  

    function fn_list_(objects,el){
        var str="";
        objects=objects.model;
        for(var j in objects){
            var data=objects[j]
            str+='<li><a href="https://e-shop.rrlsz.com.cn/#/goodsdetail/'+data.id+'/null"><div class="good_imgs"><img src="https://e-shop.rrlsz.com.cn/SWebApi/Public/picture/'+data.pic_id+'.jpg"/> </div> <dl class="jd_goods_box"> <dt class="jd_goods_title">'+data.propaganda+'</dt> <dt class="jd_goods_price"> <div class="jd_goods_price_left">￥'+data.local_price+'</div> <div class="jd_goods_price_right"><em>￥'+data.cash_price+'+'+ data.beans_price+'</em> 金豆</div> </dt> </dl> </a> </li>'  
        }
        el.append(str); 
    }
